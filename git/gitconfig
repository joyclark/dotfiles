	email = joy.clark@innoq.com
	signingkey = 3FA3E01A
[push]
	default = simple
[fetch]
	prune = true
[core]
	editor = nano
	excludesfile = /Users/joy/.gitignore_global
[commit]
	gpgsign = true
	template = /Users/joy/.stCommitMsg
[gpg]
	program = /usr/local/bin/gpg
[color]
  diff = auto
  status = auto
  branch = auto
[color "status"]
  changed = yellow
  added = green
  untracked = red
[alias]
  f = fetch
  st = status
  ds = diff --staged 
  ci = commit
  co = checkout
  fix = commit --amend -C HEAD
  br = branch
  nb = checkout -b
  rb = rebase
  logf = log --graph --pretty=format:'%Cred%h %C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --all
  praise = blame
  unstage = reset HEAD --
  restore = checkout --
  i = add -p
  cm = commit -m
  p = push
  pu = push -u
